    <script>
        // Handle forgot password form submission
        document.getElementById('forgotPasswordForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const email = document.getElementById('email').value;
            const sendBtn = document.getElementById('sendResetBtn');

            // Basic validation
            if (!email) {
                alert('Vui lòng nhập địa chỉ email!');
                return;
            }

            // Email validation
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!emailRegex.test(email)) {
                alert('Địa chỉ email không hợp lệ!');
                return;
            }

            // Show loading state
            sendBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Đang gửi...';
            sendBtn.disabled = true;

            // Simulate API call
            setTimeout(() => {
                // Hide step 1 and show step 2
                document.getElementById('step1').style.display = 'none';
                document.getElementById('step2').style.display = 'block';
                
                // Store email for resend functionality
                localStorage.setItem('resetEmail', email);
            }, 2000);
        });

        // Handle resend email
        document.getElementById('resendBtn').addEventListener('click', function() {
            const email = localStorage.getItem('resetEmail');
            const resendBtn = this;
            
            if (email) {
                // Show loading state
                resendBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Đang gửi lại...';
                resendBtn.disabled = true;

                // Simulate API call
                setTimeout(() => {
                    resendBtn.innerHTML = '<i class="fas fa-check mr-2"></i>Đã gửi lại!';
                    resendBtn.classList.remove('btn-secondary');
                    resendBtn.classList.add('btn-success');
                    
                    // Reset button after 3 seconds
                    setTimeout(() => {
                        resendBtn.innerHTML = '<i class="fas fa-redo mr-2"></i>Gửi lại email';
                        resendBtn.classList.remove('btn-success');
                        resendBtn.classList.add('btn-secondary');
                        resendBtn.disabled = false;
                    }, 3000);
                }, 1500);
            }
        });

        // Clear stored email when page loads
        window.addEventListener('load', function() {
            localStorage.removeItem('resetEmail');
        });
    </script>
