    /* Phần auth-left (bên trái) */
    .auth-left {
        background: linear-gradient(135deg, var(--dark-color) 0%, #212529 100%);
        color: white;
    }

    /* Logo và brand */
    .brand-primary {
        background-color: var(--primary-color);
        color: var(--text-on-yellow);
        padding: 8px 16px;
        text-transform: uppercase;
        font-weight: 700;
    }

    .brand-secondary {
        background-color: var(--dark-color);
        color: white;
        padding: 8px 16px;
        margin-left: -4px;
        text-transform: uppercase;
        font-weight: 700;
    }

    /* Nút chính */
    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: var(--text-on-yellow);
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .btn-primary:hover {
        background-color: var(--primary-dark);
        border-color: var(--primary-dark);
        color: var(--text-on-yellow);
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    /* Các nút social */
    .btn-facebook {
        background-color: #3b5998;
        border-color: #3b5998;
        color: white;
    }

    .btn-facebook:hover {
        background-color: #2d4373;
        border-color: #2d4373;
        color: white;
    }

    .btn-google {
        background-color: #db4437;
        border-color: #db4437;
        color: white;
    }

    .btn-google:hover {
        background-color: #c23321;
        border-color: #c23321;
        color: white;
    }

    /* Focus input */
    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(241, 196, 15, .25);
    }

    /* Header */
    .bg-light {
        background-color: white !important;
        border-bottom: 1px solid #eee;
    }

    /* Footer */
    .bg-dark {
        background-color: var(--dark-color) !important;
    }

    /* Password toggle */
    .password-toggle {
        position: absolute;
        right: 12px;
        top: 38px;
        background: none;
        border: none;
        color: #6c757d;
        cursor: pointer;
        z-index: 10;
        padding: 8px;
        width: auto;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
    }

    .password-toggle:hover {
        color: var(--primary-color);
    }

    .password-toggle:focus {
        outline: none;
    }

    /* Đảm bảo input có padding phải để không bị che bởi icon */
    .form-group.position-relative .form-control {
        padding-right: 40px;
    }

    /* Remember me checkbox */
    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    /* Links */
    a {
        color: var(--primary-color);
    }

    a:hover {
        color: var(--primary-dark);
        text-decoration: none;
    }

    /* Footer styling */
