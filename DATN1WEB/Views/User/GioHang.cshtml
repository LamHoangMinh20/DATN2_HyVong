<script>
    document.addEventListener("DOMContentLoaded", function () {
        const parseVND = (str) => parseInt((str || "").replace(/\D/g, ""));
        const formatVND = (num) => num.toLocaleString("vi-VN") + " VNĐ";

        const cartItems = JSON.parse(localStorage.getItem("cartItems") || "[]");
        const cartBody = document.getElementById("cart-body");
        let totalAmount = 0;

        // Render từng sản phẩm
        cartItems.forEach(item => {
            const total = item.price * item.quantity;
            totalAmount += total;

            const row = document.createElement("tr");
            row.innerHTML = `
                <td class="align-middle"><img src="${item.img}" style="width: 50px;"> ${item.name}</td>
                <td class="align-middle">${formatVND(item.price)}</td>
                <td class="align-middle">
                    <div class="input-group quantity mx-auto" style="width: 100px;">
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-primary btn-minus"> <i class="fa fa-minus"></i> </button>
                        </div>
                        <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="${item.quantity}">
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-primary btn-plus"> <i class="fa fa-plus"></i> </button>
                        </div>
                    </div>
                </td>
                <td class="align-middle item-total">${formatVND(total)}</td>
                <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
            `;
            cartBody.appendChild(row);
        });

        // Cập nhật tổng tiền ban đầu
        const updateCartTotal = () => {
            let newTotal = 0;
            document.querySelectorAll(".item-total").forEach(cell => {
                newTotal += parseVND(cell.textContent);
            });
            document.querySelectorAll(".bg-light h6, .bg-light h5").forEach(el => {
                if (el.textContent.includes("VNĐ")) {
                    el.textContent = formatVND(newTotal);
                }
            });
        };
        updateCartTotal();

        // Gán sự kiện cho từng dòng
        document.querySelectorAll("tbody tr").forEach(row => {
            const btnMinus = row.querySelector(".btn-minus");
            const btnPlus = row.querySelector(".btn-plus");
            const quantityInput = row.querySelector("input");
            const totalCell = row.querySelector(".item-total");
            const priceCell = row.querySelector("td:nth-child(2)");
            const deleteBtn = row.querySelector(".btn-danger");

            const updateItem = () => {
                const price = parseVND(priceCell.textContent);
                const qty = parseInt(quantityInput.value);
                const newTotal = price * qty;
                totalCell.textContent = formatVND(newTotal);
                updateCartTotal();
            };

            btnMinus.addEventListener("click", () => {
                let qty = parseInt(quantityInput.value);
                if (qty > 1) {
                    quantityInput.value = qty - 1;
                    updateItem();
                }
            });

            btnPlus.addEventListener("click", () => {
                let qty = parseInt(quantityInput.value);
                quantityInput.value = qty + 1;
                updateItem();
            });

            quantityInput.addEventListener("change", () => {
                let qty = parseInt(quantityInput.value);
                if (isNaN(qty) || qty < 1) qty = 1;
                quantityInput.value = qty;
                updateItem();
            });

            deleteBtn.addEventListener("click", () => {
                row.remove();
                updateCartTotal();
            });
        });

        // Khi nhấn nút Thanh toán
        const checkoutBtn = document.querySelector(".btn.btn-block.btn-primary.font-weight-bold.my-3.py-3");
        if (checkoutBtn) {
            checkoutBtn.addEventListener("click", () => {
                const cartItems = [];
                document.querySelectorAll("tbody tr").forEach(row => {
                    const name = row.querySelector("td:nth-child(1)").textContent.trim();
                    const price = parseVND(row.querySelector("td:nth-child(2)").textContent.trim());
                    const quantity = parseInt(row.querySelector("input").value);
                    const total = price * quantity;
                    const img = row.querySelector("img")?.getAttribute("src") || "";
                    cartItems.push({ name, price, quantity, total, img });
                });

                const totalAmount = cartItems.reduce((sum, item) => sum + item.total, 0);

                localStorage.setItem("cartItems", JSON.stringify(cartItems));
                localStorage.setItem("cartTotal", formatVND(totalAmount));

                window.location.href = "checkout.html";
            });
        }
    });
</script>






