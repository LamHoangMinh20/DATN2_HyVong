@using DATN1WEB.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - The Bag Studio Admin</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #ffc107;
            --primary-dark: #e0a800;
            --sidebar-width: 300px;
            --sidebar-collapsed: 80px;
            --bg-dark: #1a1d29;
            --bg-darker: #2c3142;
            --text-muted: rgba(255,255,255,0.7);
            --border-color: rgba(255,255,255,0.1);
            --shadow: 0 4px 20px rgba(0,0,0,0.1);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            background: #f8f9fa;
            overflow-x: hidden;
        }

        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(135deg, var(--bg-dark) 0%, var(--bg-darker) 100%);
            color: white;
            overflow-y: auto;
            z-index: 1000;
            transition: var(--transition);
            box-shadow: var(--shadow);
            border-right: 1px solid var(--border-color);
        }

            .sidebar.collapsed {
                width: var(--sidebar-collapsed);
            }

            .sidebar::-webkit-scrollbar {
                width: 6px;
            }

            .sidebar::-webkit-scrollbar-track {
                background: transparent;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: var(--border-color);
                border-radius: 3px;
            }

        .main-content {
            margin-left: var(--sidebar-width);
            transition: var(--transition);
            min-height: 100vh;
        }

            .main-content.expanded {
                margin-left: var(--sidebar-collapsed);
            }

        /* Sidebar Header */
        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(10px);
        }

        .brand-logo {
            display: inline-flex;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(255, 193, 7, 0.3);
            transition: var(--transition);
        }

            .brand-logo:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 35px rgba(255, 193, 7, 0.4);
            }

            .brand-logo .logo-left {
                background: var(--bg-darker);
                color: var(--primary-color);
                padding: 12px 16px;
                font-weight: 700;
                font-size: 16px;
            }

            .brand-logo .logo-right {
                background: var(--primary-color);
                color: var(--bg-dark);
                padding: 12px 16px;
                font-weight: 700;
                font-size: 16px;
            }

        .user-profile {
            text-align: center;
            margin-top: 1rem;
        }

        .user-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            border: 3px solid var(--primary-color);
            box-shadow: 0 8px 25px rgba(255, 193, 7, 0.3);
            transition: var(--transition);
            cursor: pointer;
        }

            .user-avatar:hover {
                transform: scale(1.05);
                box-shadow: 0 12px 35px rgba(255, 193, 7, 0.4);
            }

        .user-info h6 {
            margin: 0.75rem 0 0.25rem;
            font-weight: 600;
            color: white;
        }

        .user-info small {
            color: var(--text-muted);
            font-size: 0.85rem;
        }

        .sidebar.collapsed .user-info h6,
        .sidebar.collapsed .user-info small {
            display: none;
        }

        /* Navigation */
        .sidebar-nav {
            padding: 1.5rem 1rem;
        }

        .nav-section {
            margin-bottom: 2rem;
        }

        .nav-section-title {
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 0.75rem;
            padding: 0 0.75rem;
            transition: var(--transition);
        }

        .sidebar.collapsed .nav-section-title {
            opacity: 0;
            height: 0;
            margin: 0;
            overflow: hidden;
        }

        .nav-link {
            color: var(--text-muted) !important;
            border-radius: 12px;
            margin: 0.25rem 0;
            padding: 0.75rem 1rem;
            transition: var(--transition);
            display: flex;
            align-items: center;
            text-decoration: none;
            position: relative;
            overflow: hidden;
        }

            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 0;
                height: 100%;
                background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
                transition: var(--transition);
                z-index: -1;
            }

            .nav-link:hover::before,
            .nav-link.active::before {
                width: 100%;
            }

            .nav-link:hover,
            .nav-link.active {
                color: var(--bg-dark) !important;
                transform: translateX(8px);
                box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
            }

        .sidebar.collapsed .nav-link:hover,
        .sidebar.collapsed .nav-link.active {
            transform: none;
        }

        .nav-link i {
            width: 20px;
            text-align: center;
            margin-right: 0.75rem;
            font-size: 1.1rem;
        }

        .nav-text {
            transition: var(--transition);
            font-weight: 500;
        }

        .sidebar.collapsed .nav-text {
            opacity: 0;
            width: 0;
            overflow: hidden;
        }

        .nav-link.text-danger:hover,
        .nav-link.text-danger.active {
            color: white !important;
        }

        .nav-link.text-danger::before {
            background: linear-gradient(90deg, #dc3545, #c82333);
        }

        /* Toggle Button */
        .sidebar-toggle {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1001;
            background: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            box-shadow: var(--shadow);
            color: var(--bg-dark);
            font-size: 1.2rem;
            transition: var(--transition);
        }

            .sidebar-toggle:hover {
                transform: scale(1.1);
                box-shadow: 0 6px 25px rgba(0,0,0,0.15);
            }

        /* Main Content Header */
        .content-header {
            background: white;
            padding: 1.5rem 2rem;
            margin-bottom: 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            border: 1px solid rgba(0,0,0,0.05);
        }

            .content-header h1 {
                margin: 0;
                color: var(--bg-dark);
                font-weight: 700;
            }

        .breadcrumb {
            background: none;
            padding: 0;
            margin: 0.5rem 0 0;
        }

        .breadcrumb-item a {
            color: var(--primary-color);
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: #6c757d;
        }

        /* Cards and Components */
        .card {
            border: none;
            border-radius: 16px;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

            .card:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 30px rgba(0,0,0,0.12);
            }

        .btn-primary {
            background: var(--primary-color);
            border-color: var(--primary-color);
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: var(--transition);
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                border-color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(255, 193, 7, 0.3);
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar

        {
            width: var(--sidebar-collapsed);
            transform: translateX(-100%);
        }

        .sidebar.show {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .sidebar-toggle {
            display: block;
        }

        }

        @@media (min-width: 769px) {
            .sidebar-toggle

        {
            display: none;
        }

        }

        /* Profile Badge */
        .profile-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            width: 20px;
            height: 20px;
            background: var(--primary-color);
            border: 2px solid white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .profile-badge i {
                font-size: 0.7rem;
                color: var(--bg-dark);
            }

        /* Notification Badge */
        .notification-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: #dc3545;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            font-size: 0.7rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        /* Animation */
        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateX(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        .nav-link {
            animation: slideIn 0.3s ease-out;
        }

            .nav-link:nth-child(1) {
                animation-delay: 0.1s;
            }

            .nav-link:nth-child(2) {
                animation-delay: 0.2s;
            }

            .nav-link:nth-child(3) {
                animation-delay: 0.3s;
            }

            .nav-link:nth-child(4) {
                animation-delay: 0.4s;
            }

            .nav-link:nth-child(5) {
                animation-delay: 0.5s;
            }
    </style>
</head>
<body>
    <!-- Sidebar Toggle Button -->
    <button class="sidebar-toggle d-md-none" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="d-flex align-items-center justify-content-center mb-3">
                <div class="brand-logo">
                    <span class="logo-left">THE BAG</span>
                    <span class="logo-right">STUDIO</span>
                </div>
            </div>

            <div class="user-profile">
                <div class="position-relative d-inline-block">
                    <img src="~/hinh/logo.jpg" alt="Avatar" class="user-avatar" onclick="goToProfile()" />
                    <div class="profile-badge">
                        <i class="fas fa-crown"></i>
                    </div>
                </div>
                <div class="user-info">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var currentUser = await UserManager.GetUserAsync(User);
                        <h6>@currentUser.FullName</h6>
                        <small>@currentUser.Email</small>
                    }
                    else
                    {
                        <h6>Admin User</h6>
                        <small>Quản trị viên</small>
                    }
                </div>
            </div>
        </div>

        <nav class="sidebar-nav">
            <div class="nav-section">
                <h6 class="nav-section-title">Tổng quan</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-chart-pie"></i>
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="nav-section">
                <h6 class="nav-section-title">Quản lý</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="SanPham">
                            <i class="fas fa-shopping-bag"></i>
                            <span class="nav-text">Sản phẩm</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Colors" asp-action="Index">
                            <i class="fas fa-palette"></i>
                            <span class="nav-text">Size và Màu</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link position-relative" asp-controller="Admin" asp-action="DonHang">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="nav-text">Đơn hàng</span>
                            <span class="notification-badge">5</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="KhachHang">
                            <i class="fas fa-users"></i>
                            <span class="nav-text">Khách hàng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="DanhMuc">
                            <i class="fas fa-tags"></i>
                            <span class="nav-text">Danh mục</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="MaGiamGia">
                            <i class="fas fa-ticket-alt"></i>
                            <span class="nav-text">Mã giảm giá</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="nav-section">
                <h6 class="nav-section-title">Tài khoản</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Profile">
                            <i class="fas fa-user-circle"></i>
                            <span class="nav-text">Hồ sơ cá nhân</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="#" onclick="logout()">
                            <i class="fas fa-sign-out-alt"></i>
                            <span class="nav-text">Đăng xuất</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <main class="p-4">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/localization/messages_vi.min.js"></script>

    <script>
        // Khi đăng xuất, lưu trạng thái vào localStorage
           function logout() {
               localStorage.removeItem('userLoggedIn'); // Xóa dữ liệu khi đăng xuất
               window.location.href = '/Account/Login';  // Chuyển hướng về trang đăng nhập
           }

        // Sidebar functionality
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const navLinks = document.querySelectorAll(".sidebar .nav-link");
            const currentPath = window.location.pathname.toLowerCase();

            // Navigation active state
            navLinks.forEach(link => {
                const href = link.getAttribute("href");
                if (href) {
                    const linkPath = new URL(href, window.location.origin).pathname.toLowerCase();
                    if (currentPath === linkPath) {
                        link.classList.add("active");
                    } else {
                        link.classList.remove("active");
                    }
                }

                link.addEventListener("click", function () {
                    navLinks.forEach(l => l.classList.remove("active"));
                    this.classList.add("active");
                });
            });

            // Mobile sidebar toggle
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('show');
                });
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                if (window.innerWidth <= 768) {
                    if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
                        sidebar.classList.remove('show');
                    }
                }
            });

            // Desktop sidebar collapse (optional)
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.key === 'b') {
                    e.preventDefault();
                    sidebar.classList.toggle('collapsed');
                    mainContent.classList.toggle('expanded');
                }
            });
        });

        // Profile navigation
        function goToProfile() {
            window.location.href = '@Url.Action("Profile", "Admin")';
        }

        function logout() {
                if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                    // Sử dụng fetch để gửi yêu cầu POST
                    fetch('@Url.Action("Logout", "Account")', {
                        method: 'POST', // Phương thức POST
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({})  // Có thể để body trống nếu không cần dữ liệu
                    })
                    .then(response => {
                        if (response.ok) {
                            window.location.href = '/Account/Login'; // Chuyển hướng về trang đăng nhập
                        } else {
                            alert("Đăng xuất thất bại. Vui lòng thử lại!");
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                }
            }

        // Smooth scrolling for sidebar
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                // Add loading state
                const icon = this.querySelector('i');
                const originalClass = icon.className;
                icon.className = 'fas fa-spinner fa-spin';

                setTimeout(() => {
                    icon.className = originalClass;
                }, 1000);
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
